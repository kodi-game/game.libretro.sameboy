<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.sameboy"
		name="Nintendo - Game Boy / Color (SameBoy)"
		version="1.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gameboy" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>gb|gbc</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Nintendo - Game Boy / Color (SameBoy)</summary>
		<description>SameBoy is an open source Gameboy (DMG) and Gameboy Color (CGB) emulator, written in portable C.

Supported files: .gb, .gbc</description>
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
	</extension>
</addon>
