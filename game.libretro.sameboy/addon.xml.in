<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.sameboy"
		name="Nintendo - Game Boy / Color (SameBoy)"
		version="0.15.4.34"
		provider-name="LIJI32">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gameboy" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>gb|gbc</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.sameboy</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="en_GB">Nintendo - Game Boy / Color (SameBoy)</summary>
		<summary lang="es_ES">Nintendo - Game Boy / Color (SameBoy)</summary>
		<description lang="da_DK">SameBoy er en open source Gameboy (DMG) og Gameboy Color (CGB) emulator, skrevet i bærbar C.</description>
		<description lang="de_DE">SameBoy ist ein Open-Source-Emulator für den Gameboy (DMG) und den Gameboy Color (CGB), geschrieben in Portable C.</description>
		<description lang="en_GB">SameBoy is an open source Gameboy (DMG) and Gameboy Color (CGB) emulator, written in portable C.</description>
		<description lang="es_ES">SameBoy es un emulador de código abierto de Gameboy (DMG) y Gameboy Color (CGB), escrito en C portable.</description>
		<description lang="zh_CN">SameBoy 是一个开源的 Gameboy（DMG）和 Gameboy Color（CGB）模拟器，用便携式 C 编写。</description>
	</extension>
</addon>
